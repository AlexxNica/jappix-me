# Requires mod_rewrite
RewriteEngine On
RewriteBase /
RewriteRule ^([^\/]+@[^\/]+|new|privacy|cache|invite|pending|py)(([\/]+)(.*))?$ index.php?u=$1&s=$4 [L]

# Requires mod_access
<Files ~ "^(config\.xml|cron\.php)$">
	Order allow,deny
	Deny from all
</Files>
